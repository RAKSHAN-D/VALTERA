<h1>Documents</h1>

<h3>Notes</h3>
<ul>
  <% if (notes && notes.length > 0) { %>
    <% notes.forEach(doc => { %>
      <li>
        <strong><%= doc.title %></strong> -
        <a href="/<%= doc.filename %>" target="_blank">View</a>
        <form action="/delete-document/<%= doc.id %>" method="POST" style="display:inline;" onsubmit="return confirm('Are you sure you want to delete this document?');">
          <button type="submit">Delete</button>
        </form>
      </li>
    <% }); %>
  <% } else { %>
    <li>No notes found</li>
  <% } %>
</ul>

<h3>Circulars</h3>
<ul>
  <% if (circulars && circulars.length > 0) { %>
    <% circulars.forEach(doc => { %>
      <li>
        <strong><%= doc.title %></strong> -
