<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>View Students</title>
  <style>
    body {
      font-family: 'Segoe UI', sans-serif;
      background-color: #f6fff8;
      padding: 30px;
      margin: 0;
    }

    h1 {
      color: #1b4332;
      text-align: center;
      margin-bottom: 30px;
    }

    table {
      width: 100%;
      border-collapse: collapse;
      background-color: #ffffff;
      box-shadow: 0 2px 8px rgba(0, 128, 0, 0.1);
    }

    th, td {
      border: 1px solid #b7e4c7;
      padding: 12px 16px;
      text-align: left;
    }

    th {
      background-color: #95d5b2;
      color: #1b4332;
    }

    td {
      background-color: #e9f5ec;
    }

    button {
      background-color: #2d6a4f;
      color: white;
      padding: 8px 14px;
      border: none;
      border-radius: 6px;
      cursor: pointer;
    }

    button:hover {
      background-color: #40916c;
    }

    a {
      display: inline-block;
      margin-top: 20px;
      color: #2d6a4f;
      text-decoration: none;
      font-weight: bold;
    }

    a:hover {
      text-decoration: underline;
    }

    form {
      margin: 0;
    }
  </style>
</head>
<body>
  <h1>Students List</h1>
  <table>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Branch</th>
      <th>College</th>
      <th>Action</th>
    </tr>
    <% students.forEach(student => { %>
      <tr>
        <td><%= student.name %></td>
        <td><%= student.email %></td>
        <td><%= student.branch %></td>
        <td><%= student.college %></td>
        <td>
          <form action="/delete-user/<%= student.id %>" method="POST" onsubmit="return confirm('Are you sure you want to remove this student?');">
            <button type="submit">Remove</button>
          </form>
        </td>
      </tr>
    <% }); %>
  </table>
  <br>
  <a href="/dashboard">‚Üê Back to Dashboard</a>
</body>
</html>
